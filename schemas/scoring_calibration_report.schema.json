{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/scoring_calibration_report.schema.json",
  "title": "ScoringCalibrationReport",
  "type": "object",
  "description": "Report comparing scoring output to labeled calibration data.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "summary": {
      "type": "object",
      "properties": {
        "total_labels": { "type": "integer", "minimum": 0 },
        "matched": { "type": "integer", "minimum": 0 },
        "missing": { "type": "integer", "minimum": 0 },
        "accuracy": { "type": "number", "minimum": 0 }
      },
      "required": ["total_labels", "matched", "missing", "accuracy"],
      "additionalProperties": true
    },
    "mismatches": {
      "type": "array",
      "items": { "$ref": "#/$defs/mismatch" }
    }
  },
  "required": ["schema_version", "summary"],
  "additionalProperties": true,
  "$defs": {
    "mismatch": {
      "type": "object",
      "properties": {
        "program_id": { "type": "string" },
        "expected_bucket": { "type": "string" },
        "actual_bucket": { "type": ["string", "null"] },
        "reason": { "type": "string" }
      },
      "required": ["program_id", "expected_bucket"],
      "additionalProperties": true
    }
  }
}
