{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/evidence.schema.json",
  "title": "Evidence",
  "type": "object",
  "description": "Evidence artifact metadata supporting a finding.",
  "properties": {
    "schema_version": { "type": "string" },
    "id": { "type": "string" },
    "type": { "type": "string" },
    "description": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "hashes": {
      "type": "array",
      "items": { "$ref": "#/$defs/hash_entry" }
    },
    "timestamps": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tool_runs": {
      "type": "array",
      "items": { "$ref": "#/$defs/tool_run" }
    },
    "source": { "type": "string" },
    "custody": { "$ref": "#/$defs/custody" }
  },
  "required": ["schema_version", "type"],
  "additionalProperties": true,
  "$defs": {
    "hash_entry": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "algorithm": { "type": "string" },
        "hash": { "type": "string" },
        "computed_at": { "type": "string" },
        "size_bytes": { "type": "integer" },
        "status": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["path"],
      "additionalProperties": true
    },
    "custody": {
      "type": "object",
      "properties": {
        "collected_at": { "type": "string" },
        "collected_by": { "type": "string" },
        "collection_method": { "type": "string" },
        "source_system": { "type": "string" },
        "chain": {
          "type": "array",
          "items": { "$ref": "#/$defs/custody_event" }
        }
      },
      "additionalProperties": true
    },
    "custody_event": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string" },
        "actor": { "type": "string" },
        "action": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["timestamp", "action"],
      "additionalProperties": true
    },
    "tool_run": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tool": { "type": "string" },
        "version": { "type": "string" },
        "mode": { "type": "string" },
        "scope_reference": { "type": "string" },
        "target": { "type": "string" },
        "started_at": { "type": "string" },
        "ended_at": { "type": "string" },
        "command": { "type": "string" },
        "outputs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "hashes": {
          "type": "array",
          "items": { "$ref": "#/$defs/hash_entry" }
        },
        "notes": { "type": "string" }
      },
      "required": ["id", "tool", "mode"],
      "additionalProperties": true
    }
  }
}
