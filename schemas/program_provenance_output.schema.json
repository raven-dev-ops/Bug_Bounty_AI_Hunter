{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/program_provenance_output.schema.json",
  "title": "ProgramProvenanceOutput",
  "type": "object",
  "description": "Provenance quality and freshness metrics for program records.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "programs": {
      "type": "array",
      "items": { "$ref": "#/$defs/program" }
    }
  },
  "required": ["schema_version", "programs"],
  "additionalProperties": true,
  "$defs": {
    "program": {
      "type": "object",
      "properties": {
        "program_id": { "type": "string" },
        "name": { "type": "string" },
        "platform": { "type": "string" },
        "handle": { "type": "string" },
        "provenance_score": { "type": "number" },
        "last_fetched_at": { "type": ["string", "null"] },
        "freshness_days": { "type": ["integer", "null"] },
        "signals": { "type": "object" }
      },
      "required": ["program_id", "provenance_score"],
      "additionalProperties": true
    }
  }
}
