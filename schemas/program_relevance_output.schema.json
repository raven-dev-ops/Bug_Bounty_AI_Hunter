{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/program_relevance_output.schema.json",
  "title": "ProgramRelevanceOutput",
  "type": "object",
  "description": "AI/LLM relevance classification for programs (metadata-only).",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "programs": {
      "type": "array",
      "items": { "$ref": "#/$defs/program" }
    }
  },
  "required": ["schema_version", "programs"],
  "additionalProperties": true,
  "$defs": {
    "program": {
      "type": "object",
      "properties": {
        "program_id": { "type": "string" },
        "name": { "type": "string" },
        "platform": { "type": "string" },
        "handle": { "type": "string" },
        "policy_url": { "type": "string" },
        "relevance_score": { "type": "number" },
        "relevance": {
          "type": "string",
          "enum": ["none", "low", "medium", "high"]
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        },
        "signals": { "type": "object" }
      },
      "required": ["program_id", "relevance_score", "relevance"],
      "additionalProperties": true
    }
  }
}
