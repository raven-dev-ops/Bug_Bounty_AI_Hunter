{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/scope_asset.schema.json",
  "title": "ScopeAsset",
  "type": "object",
  "description": "Canonical scope asset entry for domains, wildcards, and CIDR ranges.",
  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string" },
    "value": { "type": "string" },
    "ports": {
      "type": "array",
      "items": { "$ref": "#/$defs/port_range" }
    },
    "source": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": { "type": "string" }
  },
  "required": ["type", "value"],
  "additionalProperties": true,
  "$defs": {
    "port_range": {
      "type": "object",
      "properties": {
        "start": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "end": { "type": "integer", "minimum": 1, "maximum": 65535 }
      },
      "required": ["start", "end"],
      "additionalProperties": false
    }
  }
}
