{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/scan_plan.schema.json",
  "title": "ScanPlan",
  "type": "object",
  "description": "Planned test cases generated from templates and targets.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "mode": { "type": "string" },
    "templates": {
      "type": "array",
      "items": { "type": "string" }
    },
    "targets": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tests": {
      "type": "array",
      "items": { "$ref": "#/$defs/test_case" }
    }
  },
  "required": ["schema_version", "tests"],
  "additionalProperties": true,
  "$defs": {
    "test_case": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string" },
        "id": { "type": "string" },
        "title": { "type": "string" },
        "objective": { "type": "string" },
        "steps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "stop_conditions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "expected_results": {
          "type": "array",
          "items": { "type": "string" }
        },
        "safety_notes": { "type": "string" }
      },
      "required": ["schema_version", "title"],
      "additionalProperties": true
    }
  }
}
