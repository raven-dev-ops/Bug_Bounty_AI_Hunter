{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/risk_assessment.schema.json",
  "title": "RiskAssessment",
  "type": "object",
  "description": "Pre-test risk assessment for active engagements.",
  "properties": {
    "schema_version": { "type": "string" },
    "id": { "type": "string" },
    "created_at": { "type": "string" },
    "owner": { "type": "string" },
    "program": { "type": "string" },
    "scope_reference": { "type": "string" },
    "targets": {
      "type": "array",
      "items": { "$ref": "#/$defs/target" }
    },
    "test_window": { "$ref": "#/$defs/time_window" },
    "approvals": {
      "type": "array",
      "items": { "$ref": "#/$defs/approval" }
    },
    "risks": {
      "type": "array",
      "items": { "$ref": "#/$defs/risk_item" }
    },
    "controls": { "$ref": "#/$defs/controls" },
    "notes": { "type": "string" }
  },
  "required": ["schema_version", "id", "program", "scope_reference", "targets"],
  "additionalProperties": true,
  "$defs": {
    "target": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "value": { "type": "string" },
        "ports": {
          "type": "array",
          "items": { "$ref": "#/$defs/port_range" }
        }
      },
      "required": ["type", "value"],
      "additionalProperties": true
    },
    "port_range": {
      "type": "object",
      "properties": {
        "start": { "type": "integer" },
        "end": { "type": "integer" }
      },
      "required": ["start", "end"],
      "additionalProperties": false
    },
    "time_window": {
      "type": "object",
      "properties": {
        "start": { "type": "string" },
        "end": { "type": "string" }
      },
      "additionalProperties": true
    },
    "approval": {
      "type": "object",
      "properties": {
        "approver": { "type": "string" },
        "approved_at": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["approver", "approved_at"],
      "additionalProperties": true
    },
    "risk_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "likelihood": { "type": "string" },
        "impact": { "type": "string" },
        "mitigations": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "description"],
      "additionalProperties": true
    },
    "controls": {
      "type": "object",
      "properties": {
        "rate_limits": { "type": "object" },
        "stop_conditions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    }
  }
}
