{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/notification_output.schema.json",
  "title": "NotificationOutput",
  "type": "object",
  "description": "Notification payloads generated by the pipeline.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "channel": { "type": "string" },
    "summary": {
      "type": "object",
      "properties": {
        "count": { "type": "integer" },
        "sample_titles": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "payload": { "type": "object" },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version", "channel", "summary"],
  "additionalProperties": true
}
