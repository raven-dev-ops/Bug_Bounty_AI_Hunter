{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/discovery_output.schema.json",
  "title": "DiscoveryOutput",
  "type": "object",
  "description": "Discovery output listing candidate assets.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "source_profile": { "type": "string" },
    "assets": {
      "type": "array",
      "items": { "$ref": "#/$defs/asset" }
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version", "assets"],
  "additionalProperties": true,
  "$defs": {
    "asset": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "value": { "type": "string" },
        "source": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "required": ["type", "value"],
      "additionalProperties": true
    }
  }
}
