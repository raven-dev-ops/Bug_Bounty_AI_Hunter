{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/triage_output.schema.json",
  "title": "TriageOutput",
  "type": "object",
  "description": "Prioritized triage output for findings or tests.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "items": {
      "type": "array",
      "items": { "$ref": "#/$defs/triage_item" }
    }
  },
  "required": ["schema_version", "items"],
  "additionalProperties": true,
  "$defs": {
    "triage_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "severity": { "type": "string" },
        "priority": { "type": "string" },
        "status": { "type": "string" },
        "source": { "type": "string" },
        "rationale": { "type": "string" },
        "confidence": { "type": "number" },
        "next_tests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "ai_used": { "type": "boolean" }
      },
      "required": ["title", "severity"],
      "additionalProperties": true
    }
  }
}
