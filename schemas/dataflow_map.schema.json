{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/dataflow_map.schema.json",
  "title": "DataflowMap",
  "type": "object",
  "description": "High-level dataflow map covering AI shadow stores and flows.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "source_profile": { "type": "string" },
    "ai_surfaces": { "type": "object", "additionalProperties": true },
    "shadow_stores": {
      "type": "array",
      "items": { "$ref": "#/$defs/store" }
    },
    "flows": {
      "type": "array",
      "items": { "$ref": "#/$defs/flow" }
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version"],
  "additionalProperties": true,
  "$defs": {
    "store": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "location": { "type": "string" },
        "sensitivity": { "type": "string" },
        "owner": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "flow": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "source": { "type": "string" },
        "destination": { "type": "string" },
        "data_types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
