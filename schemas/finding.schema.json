{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/finding.schema.json",
  "title": "Finding",
  "type": "object",
  "description": "A security finding with impact and remediation guidance.",
  "properties": {
    "schema_version": { "type": "string" },
    "id": { "type": "string" },
    "title": { "type": "string" },
    "severity": { "type": "string" },
    "severity_model": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "category": { "type": "string" },
        "axes": {
          "type": "object",
          "properties": {
            "data_exposure": { "type": "string" },
            "integrity": { "type": "string" },
            "autonomy": { "type": "string" },
            "cost_dos": { "type": "string" }
          },
          "additionalProperties": true
        },
        "method": { "type": "string" },
        "reference": { "type": "string" }
      },
      "additionalProperties": true
    },
    "export_fields": {
      "type": "object",
      "properties": {
        "github": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "body": { "type": "string" },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": true
        },
        "jira": {
          "type": "object",
          "properties": {
            "summary": { "type": "string" },
            "description": { "type": "string" },
            "priority": { "type": "string" },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            },
            "issue_type": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "description": { "type": "string" },
    "impact": { "type": "string" },
    "remediation": { "type": "string" },
    "evidence_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "references": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version", "title", "severity"],
  "additionalProperties": true
}
