{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/finding.schema.json",
  "title": "Finding",
  "type": "object",
  "description": "A security finding with impact and remediation guidance.",
  "properties": {
    "schema_version": { "type": "string" },
    "id": { "type": "string" },
    "title": { "type": "string" },
    "severity": { "type": "string" },
    "description": { "type": "string" },
    "impact": { "type": "string" },
    "remediation": { "type": "string" },
    "evidence_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "references": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version", "title", "severity"],
  "additionalProperties": true
}
