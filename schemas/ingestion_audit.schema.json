{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/ingestion_audit.schema.json",
  "title": "IngestionAudit",
  "type": "object",
  "description": "Audit log for catalog ingestion runs.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "run_id": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed"]
    },
    "started_at": { "type": "string" },
    "finished_at": { "type": "string" },
    "public_only": { "type": "boolean" },
    "robots_mode": { "type": "boolean" },
    "allow_domains": {
      "type": "array",
      "items": { "type": "string" }
    },
    "connectors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "listed": { "type": "integer", "minimum": 0 },
          "enriched": { "type": "integer", "minimum": 0 },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name"],
        "additionalProperties": true
      }
    },
    "sources_total": { "type": "integer", "minimum": 0 },
    "outputs": {
      "type": "object",
      "properties": {
        "registry_path": { "type": ["string", "null"] },
        "registry_written": { "type": "boolean" },
        "registry_programs": { "type": ["integer", "null"], "minimum": 0 },
        "audit_log_path": { "type": "string" },
        "audit_summary_path": { "type": "string" },
        "audit_summary_json_path": { "type": "string" }
      },
      "additionalProperties": true
    },
    "cache_dir": { "type": ["string", "null"] },
    "fixtures_dir": { "type": ["string", "null"] },
    "metrics": { "type": "object", "additionalProperties": true },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": { "type": "string" }
  },
  "required": ["schema_version", "run_id", "status", "started_at", "finished_at"],
  "additionalProperties": true
}
