{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/threat_model.schema.json",
  "title": "ThreatModel",
  "type": "object",
  "description": "AI-focused threat model capturing attack surfaces and impacts.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "target": { "type": "string" },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "attack_surfaces": {
      "type": "array",
      "items": { "$ref": "#/$defs/surface" }
    },
    "threats": {
      "type": "array",
      "items": { "$ref": "#/$defs/threat" }
    },
    "out_of_scope": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["schema_version"],
  "additionalProperties": true,
  "$defs": {
    "surface": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "assets": {
          "type": "array",
          "items": { "type": "string" }
        },
        "controls": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "threat": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "surface": { "type": "string" },
        "impact": { "type": "string" },
        "likelihood": { "type": "string" },
        "severity": { "type": "string" },
        "mitigations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
