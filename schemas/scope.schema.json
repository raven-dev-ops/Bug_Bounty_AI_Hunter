{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/scope.schema.json",
  "title": "Scope",
  "type": "object",
  "description": "Program scope, including optional asset listings and counts.",
  "properties": {
    "in_scope": {
      "type": "array",
      "items": { "$ref": "#/$defs/scope_asset" }
    },
    "out_of_scope": {
      "type": "array",
      "items": { "$ref": "#/$defs/scope_asset" }
    },
    "counts": {
      "type": "object",
      "properties": {
        "in_scope": { "type": "integer", "minimum": 0 },
        "out_of_scope": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "restrictions": {
      "type": "array",
      "items": {
        "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/restriction" }]
      }
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": true,
  "$defs": {
    "scope_asset": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "value": { "type": "string" },
        "ports": {
          "type": "array",
          "items": { "$ref": "#/$defs/port_range" }
        },
        "source": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "required": ["type", "value"],
      "additionalProperties": true
    },
    "port_range": {
      "type": "object",
      "properties": {
        "start": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "end": { "type": "integer", "minimum": 1, "maximum": 65535 }
      },
      "required": ["start", "end"],
      "additionalProperties": false
    },
    "restriction": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "category": { "type": "string" },
        "severity": { "type": "string" },
        "source": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["text"],
      "additionalProperties": true
    }
  }
}
