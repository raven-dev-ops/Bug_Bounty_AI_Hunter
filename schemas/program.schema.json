{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/program.schema.json",
  "title": "Program",
  "type": "object",
  "description": "Canonical bug bounty program record.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "id": { "type": "string" },
    "platform": { "type": "string" },
    "handle": { "type": "string" },
    "name": { "type": "string" },
    "canonical_url": { "type": "string" },
    "program_type": { "type": "string" },
    "rewards": { "$ref": "#/$defs/reward" },
    "scope": { "$ref": "#/$defs/scope" },
    "restrictions": {
      "type": "array",
      "items": {
        "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/restriction" }]
      }
    },
    "attribution": {
      "type": "array",
      "items": { "$ref": "#/$defs/attribution" }
    },
    "safe_harbor": { "$ref": "#/$defs/safe_harbor" },
    "response_time": { "$ref": "#/$defs/response_time" },
    "updated_at": { "type": "string" },
    "provenance": {
      "type": "array",
      "items": { "$ref": "#/$defs/provenance" }
    },
    "notes": { "type": "string" }
  },
  "required": ["schema_version", "name"],
  "additionalProperties": true,
  "$defs": {
    "reward": {
      "type": "object",
      "properties": {
        "currency": { "type": "string" },
        "min": { "type": "number", "minimum": 0 },
        "max": { "type": "number", "minimum": 0 },
        "summary": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "attribution": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "text": { "type": "string" },
        "terms_url": { "type": "string" },
        "license": { "type": "string" },
        "reuse_constraints": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "restriction": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "category": { "type": "string" },
        "severity": { "type": "string" },
        "source": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["text"],
      "additionalProperties": true
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": {
          "type": "array",
          "items": { "$ref": "#/$defs/scope_asset" }
        },
        "out_of_scope": {
          "type": "array",
          "items": { "$ref": "#/$defs/scope_asset" }
        },
        "counts": {
          "type": "object",
          "properties": {
            "in_scope": { "type": "integer", "minimum": 0 },
            "out_of_scope": { "type": "integer", "minimum": 0 },
            "total": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": true
        },
        "restrictions": {
          "type": "array",
          "items": {
            "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/restriction" }]
          }
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "scope_asset": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "value": { "type": "string" },
        "ports": {
          "type": "array",
          "items": { "$ref": "#/$defs/port_range" }
        },
        "source": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      },
      "required": ["type", "value"],
      "additionalProperties": true
    },
    "port_range": {
      "type": "object",
      "properties": {
        "start": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "end": { "type": "integer", "minimum": 1, "maximum": 65535 }
      },
      "required": ["start", "end"],
      "additionalProperties": false
    },
    "safe_harbor": {
      "type": "object",
      "properties": {
        "present": { "type": "boolean" },
        "notes": { "type": "string" },
        "url": { "type": "string" }
      },
      "additionalProperties": true
    },
    "response_time": {
      "type": "object",
      "properties": {
        "first_response_hours": { "type": "number", "minimum": 0 },
        "resolution_time_hours": { "type": "number", "minimum": 0 },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "source_id": { "type": "string" },
        "url": { "type": "string" },
        "terms_url": { "type": "string" },
        "license": { "type": "string" },
        "attribution": { "type": "string" },
        "reuse_constraints": { "type": "string" },
        "http_status": { "type": "integer" },
        "fetched_at": { "type": "string" },
        "parser_version": { "type": "string" },
        "git_commit": { "type": "string" },
        "artifact_path": { "type": "string" },
        "artifact_hash": { "type": "string" },
        "hash_algorithm": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
