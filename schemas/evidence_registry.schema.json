{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/evidence_registry.schema.json",
  "title": "EvidenceRegistry",
  "type": "object",
  "description": "Registry of evidence artifacts captured for findings.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "created_at": { "type": "string" },
    "updated_at": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": { "$ref": "#/$defs/evidence_item" }
    }
  },
  "required": ["schema_version", "evidence"],
  "additionalProperties": true,
  "$defs": {
    "evidence_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "description": { "type": "string" },
        "artifacts": {
          "type": "array",
          "items": { "type": "string" }
        },
        "hashes": {
          "type": "array",
          "items": { "$ref": "#/$defs/hash_entry" }
        },
        "timestamps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "source": { "type": "string" },
        "custody": { "$ref": "#/$defs/custody" },
        "notes": { "type": "string" }
      },
      "required": ["id", "type", "description"],
      "additionalProperties": true
    },
    "hash_entry": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "algorithm": { "type": "string" },
        "hash": { "type": "string" },
        "computed_at": { "type": "string" },
        "size_bytes": { "type": "integer" },
        "status": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["path"],
      "additionalProperties": true
    },
    "custody": {
      "type": "object",
      "properties": {
        "collected_at": { "type": "string" },
        "collected_by": { "type": "string" },
        "collection_method": { "type": "string" },
        "source_system": { "type": "string" },
        "chain": {
          "type": "array",
          "items": { "$ref": "#/$defs/custody_event" }
        }
      },
      "additionalProperties": true
    },
    "custody_event": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string" },
        "actor": { "type": "string" },
        "action": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["timestamp", "action"],
      "additionalProperties": true
    }
  }
}
