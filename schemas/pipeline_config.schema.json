{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ravdevops.com/schemas/pipeline_config.schema.json",
  "title": "PipelineConfig",
  "type": "object",
  "description": "Pipeline orchestration configuration.",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "stages": {
      "type": "array",
      "items": { "$ref": "#/$defs/stage" }
    },
    "notes": { "type": "string" }
  },
  "required": ["schema_version", "stages"],
  "additionalProperties": true,
  "$defs": {
    "stage": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "config": { "type": "object" }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
